<section id="auth" style="min-height: 94.5vh;">

    <div class="content-box-md">

        <div class="container">

            <div class="row">

                <div class="col-md-6">
                    <img src="/images/auth/auth_pic.jpg" class="img-fluid wow fadeInLeft" data-wow-duration="1.5s">
                </div>


                <div class="col-md-6">
                            
                    <form class="login-form" action="/auth/reset" method="POST">
                        <h1 class="text-center login-welcome">Password Update</h1>
                        <div class="form-row justify-content-center">

                            <div class="flash">
                                <% if (error.length != 0) { %>
                                        <p class="error-text green-error"><%= error %></p>
                                <% } %>
                            </div>

                            <div class="form-group col-md-9 d-flex wow fadeInRight" data-wow-duration="1.5s">
                                <input type="email" name="email" class="form-control" data-csrf="<%=csrf %>" id="resetEmail" placeholder="Email" required>
                            </div>

                    
                        <input type="hidden" name="_csrf" value="<%=csrf %>">
                    
                        <button type="submit" class="btn btn-warning btn-lg col-md-5" id="psw-btn">Send</button>
                    
                    </form>

                </div>

            </div>

        </div>

    </div>

</section>