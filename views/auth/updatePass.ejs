<section id="auth" style="min-height: 94.5vh;">

    <div class="content-box-md">

        <div class="container">

            <div class="row">

                <div class="col-md-6">
                    <img src="/images/auth/auth_pic.jpg" class="img-fluid wow fadeInLeft" data-wow-duration="1.5s">
                </div>


                <div class="col-md-6">
                            
                    <form class="login-form" action="/auth/password" method="POST">
                        <h1 class="text-center login-welcome">Sign In</h1>
                        <div class="form-row justify-content-center">

                            <div class="form-group col-md-8 d-flex wow fadeInRight" data-wow-duration="1.5s">
                                <input type="password" name="password" class="form-control" id="updatePassword" placeholder="Password" required>
                            </div>

                            <div class="form-group col-md-8 d-flex wow fadeInRight" data-wow-duration="1.7s">
                                <input type="password" name="repeatPassword" class="form-control" id="updatePasswordConfirm" placeholder="Repeat" required>
                            </div>

                    
                        <input type="hidden" name="_csrf" value="<%=csrf %>">
                        <input type="hidden" name="userId" value="<%=userId %>">
                        <input type="hidden" name="token" value="<%=token %>">
                    
                        <button type="submit" class="btn btn-warning btn-lg col-md-5">Send</button>
                    
                    </form>

                </div>

            </div>

        </div>

    </div>

</section>